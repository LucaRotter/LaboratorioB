<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<AnchorPane fx:id="rootPane" prefWidth="1100" prefHeight="700"
            xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@css/loginRegisterPage.css"
            fx:controller="applicationrob.RegisterController" styleClass="registerPage">

   
    <Button fx:id="backBtn" text="" layoutX="20" layoutY="20"
            style="-fx-font-size: 14px; -fx-background-color: transparent; -fx-text-fill: #333;">
        <graphic>
        <ImageView fitHeight="33.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/backBtn.png" />
               </image>
            </ImageView>
        </graphic>
    </Button>

     
    <VBox fx:id="registerBox" spacing="15" alignment="CENTER"
          layoutX="350" layoutY="80" prefWidth="400" prefHeight="500"
          styleClass="formBox">

        <Label text="User Registration" styleClass="formTitle"/>

        <TextField fx:id="nameField" promptText="Name" prefWidth="250"/>
        <TextField fx:id="surnameField" promptText="Surname" prefWidth="250"/>
        <TextField fx:id="cfField" promptText="Fiscal Code" prefWidth="250"/>
        <TextField fx:id="emailField" promptText="Email" prefWidth="250"/>
        <PasswordField fx:id="pwField" promptText="Password" prefWidth="250"/>

        <Button text="Register" onAction="#onRegisterUser" prefWidth="150"/>
        <Label fx:id="errorLabel" text="" visible="false"/>
        <Label text="Already have an account?"/>
        <Hyperlink text="Click Here" onAction="#changeToLogin"/>

    </VBox>

</AnchorPane>