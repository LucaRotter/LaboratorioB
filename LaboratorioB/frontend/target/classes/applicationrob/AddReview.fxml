<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="applicationrob.AddReviewController"
            prefWidth="880" prefHeight="700"
            stylesheets="@css/review.css">

    <children>
        <GridPane fx:id="ReviewTable"
                  layoutX="30" layoutY="100"
                  prefWidth="820" prefHeight="500"
                  hgap="10" vgap="8"
                  styleClass="TableReview">

            <!-- IMPORTANTE: ColumnConstraints deve stare dentro di <columnConstraints> -->
            <columnConstraints>
                <ColumnConstraints percentWidth="20" />
                <ColumnConstraints percentWidth="30" />
                <ColumnConstraints percentWidth="10" />
                <ColumnConstraints percentWidth="40" />
            </columnConstraints>

            <!-- Riga intestazioni -->
            <Label text="Criterio" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="header"/>
            <Label text="Spiegazione" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="header"/>
            <Label text="Score" GridPane.rowIndex="0" GridPane.columnIndex="2" styleClass="header"/>
            <Label text="Note" GridPane.rowIndex="0" GridPane.columnIndex="3" styleClass="header"/>

            <!-- Riga 1 -->
            <Label text="Stile" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Label text="Valutazione sullo stile di scrittura" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <ChoiceBox fx:id="ScoreStyle" GridPane.rowIndex="1" GridPane.columnIndex="2" prefWidth="60"/>
            <TextArea fx:id="TxtStyle" GridPane.rowIndex="1" GridPane.columnIndex="3" prefRowCount="2"/>

            <!-- Riga 2 -->
            <Label text="Contenuto" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Label text="Valutazione sui contenuti del libro" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <ChoiceBox fx:id="ScoreContent" GridPane.rowIndex="2" GridPane.columnIndex="2" prefWidth="60"/>
            <TextArea fx:id="TxtContent" GridPane.rowIndex="2" GridPane.columnIndex="3" prefRowCount="2"/>

            <!-- Riga 3 -->
            <Label text="Gradevolezza" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Label text="Valutazione sul gradimento" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            <ChoiceBox fx:id="ScorePleasentness" GridPane.rowIndex="3" GridPane.columnIndex="2" prefWidth="60"/>
            <TextArea fx:id="TxtPleasentess" GridPane.rowIndex="3" GridPane.columnIndex="3" prefRowCount="2"/>

            <!-- Riga 4 -->
            <Label text="Originalità" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <Label text="Valutazione sulla originalità" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            <ChoiceBox fx:id="ScoreOriginality" GridPane.rowIndex="4" GridPane.columnIndex="2" prefWidth="60"/>
            <TextArea fx:id="TxtOriginality" GridPane.rowIndex="4" GridPane.columnIndex="3" prefRowCount="2"/>

            <!-- Riga 5 -->
            <Label text="Edizione" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <Label text="Valutazione sull’edizione" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
            <ChoiceBox fx:id="ScoreEdition" GridPane.rowIndex="5" GridPane.columnIndex="2" prefWidth="60"/>
            <TextArea fx:id="TxtEdition" GridPane.rowIndex="5" GridPane.columnIndex="3" prefRowCount="2"/>

            <!-- Riga 6 -->
            <Label text="Voto Finale" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <Label text="Valutazione complessiva del libro" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
            <ChoiceBox fx:id="ScoreFinal" GridPane.rowIndex="6" GridPane.columnIndex="2" prefWidth="60"/>
            <TextArea fx:id="TxtFinal" GridPane.rowIndex="6" GridPane.columnIndex="3" prefRowCount="2"/>

        </GridPane>

        <Button fx:id="BtnConfirm" text="Confirm" layoutX="720" layoutY="640" prefWidth="120"/>
        <Button fx:id="BtnRestar" text="Restart" layoutX="590" layoutY="640" prefWidth="120"/>
    </children>
</AnchorPane>

            

        