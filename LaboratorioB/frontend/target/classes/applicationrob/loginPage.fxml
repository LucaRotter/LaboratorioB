<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="rootPane" prefWidth="1100" prefHeight="700"
            xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1" stylesheets="@loginPage.css"
            fx:controller="applicationrob.loginController">


    <VBox fx:id="userBox" spacing="15" alignment="CENTER"
          layoutX="350" layoutY="150" prefWidth="400" prefHeight="400"
          styleClass="formBox">
        <Label text="User Login" styleClass="formTitle"/>

        <TextField fx:id="emailField" promptText="Email" prefWidth="250"/>
        <PasswordField fx:id="pwField" promptText="Password" prefWidth="250"/>

        <Button text="Login" onAction="#onUserLogin" prefWidth="150"/>
        <Label text="Don't have an account?"/>
        <Hyperlink text="Click Here" onAction="#changeToRegister"/>
    </VBox>

   
</AnchorPane>