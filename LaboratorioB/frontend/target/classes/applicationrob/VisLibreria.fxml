    </HBox>

	 <ScrollPane fx:id="scrollContent" prefWidth="840.0" prefHeight="550.0"
                AnchorPane.topAnchor="120.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <content>
            <GridPane fx:id="bookContainer" hgap="10" vgap="10" />
        </content>
    </ScrollPane>
	</children>
	</AnchorPane>