<AnchorPane prefHeight="700.0" prefWidth="880.0" stylesheets="@css/libraries.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="applicationrob.VisLibreriaController">
<children> 
  <HBox layoutY="35.0" layoutX="20.0" prefWidth="840.0" spacing="20" alignment="CENTER_LEFT">
    
       <Text fx:id="bookNameLabel" text="My Libraries" styleClass="page-title"/>
       <Region HBox.hgrow="ALWAYS"/>
     <Pane layoutX="526.0" layoutY="45.0" prefHeight="40.0" maxHeight= "40.0" prefWidth="290.0" styleClass="SearchBar">
     <children>
            <TextField fx:id="searchBar" layoutX="44.0" layoutY= "8.0" prefHeight="25.0" prefWidth="220.0" onAction="#SeachBooksInLibrary" promptText="Search your saved books" />
            <Button fx:id="btnSearch" layoutX="5.0"  layoutY="5.0"  mnemonicParsing="false"  onAction="#SeachBooksInLibrary" prefHeight="30.0" prefWidth="30.0">
               <graphic>
                  <ImageView fitHeight="23.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/search.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </Pane>
    </HBox>

	 <ScrollPane fx:id="scrollContent" prefWidth="840.0" prefHeight="550.0" fitToWidth="true" fitToHeight="false" hbarPolicy="NEVER" 
                AnchorPane.topAnchor="120.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" styleClass="ScrollPaneBooks" >
        <content>
            <GridPane fx:id="booksContainer" hgap="10" vgap="10" />
        </content>
    </ScrollPane>
	</children>
	</AnchorPane>