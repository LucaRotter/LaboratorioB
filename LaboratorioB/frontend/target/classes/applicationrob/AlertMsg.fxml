<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?> 
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>


<AnchorPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml" stylesheets="@css/alert.css" fx:controller="applicationrob.AlertController" prefWidth="400" prefHeight="200" styleClass="alert-pane">
    <children>
    <StackPane minWidth="100" minHeight="100" maxWidth="150" maxHeight="150" style="-fx-overflow: hidden;">
    <ImageView fx:id="iconImage" fitWidth="120" fitHeight="120" preserveRatio="true" pickOnBounds="true"/>
    </StackPane>
        <VBox fx:id="containerElement" alignment="CENTER" spacing="10" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            
            <Label fx:id="titleLabel" text="Error" styleClass="alert-title"/>
            <Label fx:id="messageLabel" text="" wrapText="true" styleClass="alert-message"/>
            <Button fx:id="closeButton" text="CLOSE" styleClass="alert-button" onAction="#closeModal"/>
        </VBox>
    </children> 
</AnchorPane>