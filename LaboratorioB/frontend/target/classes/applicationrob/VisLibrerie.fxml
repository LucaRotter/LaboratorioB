<AnchorPane prefHeight="700.0" prefWidth="880.0" StyleClass="librariesPage" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="applicationrob.VisLibrerieController">
	<children>
	<HBox layoutY="35.0" layoutX="20.0" prefWidth="840.0" spacing="20" alignment="CENTER_LEFT">
    
       <Text fx:id="titleText" text="My Libraries" styleClass="page-title"/>
       <Region HBox.hgrow="ALWAYS"/>
     <Pane layoutX="526.0" layoutY="45.0" prefHeight="40.0" maxHeight= "40.0" prefWidth="290.0" styleClass="SearchBar">
     <children>
            <TextField fx:id="searchBar" layoutX="44.0" layoutY= "8.0" prefHeight="25.0" prefWidth="220.0" onAction="#writeText" promptText="Search your saved libraries" />
            <Button fx:id="btnSearch" layoutX="5.0"  layoutY="5.0"  mnemonicParsing="false"  onAction="#searchLibraries" prefHeight="30.0" prefWidth="30.0">
               <graphic>
                  <ImageView fitHeight="23.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/search.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </Pane>
    </HBox>
     <Button fx:id="edit" layoutX="825.0" layoutY="52" mnemonicParsing="false"  prefHeight="30.0" prefWidth="30.0" onAction="#useEdit" styleClass="LibrariesEditButton">
      <graphic>
            <SVGPath fx:id="editIcon"
                     content="M8.5 4a.5.5 0 0 0-1 0v2h-2a.5.5 0 0 0 0 1h2v2a.5.5 0 0 0 1 0V7h2a.5.5 0 0 0 0-1h-2zm-3 7a.5.5 0 0 0 0 1h5a.5.5 0 0 0 0-1z"/>
        </graphic>
    </Button>
      <ScrollPane fx:id="scrollLibraries" AnchorPane.topAnchor="120.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"  prefWidth="840.0" prefHeight="550.0" fitToWidth="true" fitToHeight="false" hbarPolicy="NEVER"  styleClass="ScrollPaneBooks" >
        <content>
         <GridPane fx:id="librariesContainer" hgap="15" vgap="15" alignment="TOP_LEFT">
            <AnchorPane prefWidth="679" prefHeight="547">
        </AnchorPane>
        </GridPane>
            </content>
      </ScrollPane>
      <Button fx:id="emptyLbtn" text="+" prefWidth="80" prefHeight="80" layoutX="403.5" layoutY="300.5" onAction="#addLibraryEmpty"/>
            <Label fx:id="emptyText" text="Start creating your libraries" layoutX="336.5" layoutY="270" style="-fx-font-size: 16px; -fx-text-fill: gray;" />
       <Button fx:id="extraBtn" text="+" layoutX="110" layoutY="160" prefWidth="100" prefHeight="100" visible="false" onAction="#addLibrary"/>
    <StackPane fx:id="modalOverlay" visible="false" style="-fx-background-color: rgba(0,0,0,0.5);" prefWidth="880" prefHeight="700" alignment="CENTER"  >   
    <VBox alignment="CENTER" spacing="10">
        <HBox fx:id="modalContent" spacing="20" style="-fx-background-color: white; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 20;" maxWidth="500" maxHeight="250">
            <StackPane prefWidth="120" prefHeight="120" style="-fx-background-color: #f0f0f07c; -fx-border-color: #bdbdbd7b; -fx-border-radius: 8; -fx-background-radius: 8;">
            <ImageView fitHeight="110" fitWidth="110">
                    <image>
                        <Image url="@../img/LibraryB.png" />
                    </image>
                </ImageView>
            </StackPane>
            <VBox spacing="15">
                <VBox spacing="15">
                    <Label text="Name Library:"/>
                    <TextField fx:id="modalTextField" prefWidth="250" promptText="Enter library name"/>
                </VBox>
                <HBox alignment="CENTER" spacing="10" style="-fx-padding: 20 0 0 0;">
                    <Button fx:id="modalSendButton" text="Send" prefWidth="100" onAction="#sendModal"/>
                </HBox>
            </VBox>
        </HBox>
    </VBox>
</StackPane>

   </children>
</AnchorPane>
