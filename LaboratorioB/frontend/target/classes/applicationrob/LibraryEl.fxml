<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<StackPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml" fx:controller="applicationrob.LibraryController" onMouseClicked="#clickLibrary" prefHeight="150.0" prefWidth="121.0" style="-fx-border-color: black; -fx-border-width: 1;">
    <children>
    <ImageView fitHeight="122.0" fitWidth="121.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/LibraryB.png" />
         </image>
      </ImageView>
        <Button fx:id="removeBtn" text="-" StackPane.alignment="TOP_RIGHT" onAction="#removeLibrary"/>
    </children>
    <Label fx:id="libraryLabel"
           text="Nome Libreria"
           alignment="CENTER"
           wrapText="true"
           maxWidth="120"/>
</StackPane>